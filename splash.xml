<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>
	<include>./theme.xml</include>    
    <view name="splash">
        <image name="background" visible="false"/>

        <image name="background_extra" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <zIndex>0</zIndex>
            <visible>true</visible>
            <color>${backgroundColor}</color>
            <path>./_inc/images/bg_color.png</path>
        </image>

        <text name="label">
            <color>${secondaryColor}</color>
            <forceUppercase>false</forceUppercase>
            <fontPath ifSubset="font:vcr">./_inc/fonts/VCR_OSD_MONO_1.001.ttf</fontPath>
            <fontPath ifSubset="font:gb">./_inc/fonts/gb.ttf</fontPath>
            <zIndex>500</zIndex>
        </text>

		<image name="progressbar">
			<origin>0 0</origin>
			<pos>0.250 0.703</pos>
			<rotation>0</rotation>
			<rotationOrigin>1.1 1.6</rotationOrigin>
			<color>${tertiaryColor}</color>
		</image>        

		<image name="progressbar:active">
            <pos>0.250 0.703</pos>
			<color>${secondaryColor}</color>
			<colorEnd>${secondaryColor}</colorEnd>
			<gradientType>vertical</gradientType>
		</image>

    </view>

</theme>
